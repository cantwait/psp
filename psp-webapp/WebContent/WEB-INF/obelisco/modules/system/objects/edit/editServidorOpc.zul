		<style src="/css/estilo_zk.css" dynamic="true" />
		<borderlayout>
			<center autoscroll="true">
				<tabbox height="100%">
					<tabs>
						<tab label="Datos Generales" />
						<tab label="Tanques" />
						<tab label="Grupos de Variables" />
					</tabs>
					<tabpanels height="100%">
						<tabpanel visible="true">
							<panel>
								<panelchildren>
									<grid height="100%">
										<columns>

											<column width="16%"
												align="right" />
											<column width="17%" />

											<column width="16%"
												align="right" />
											<column width="17%" />

										</columns>
										<rows>
											<row>
												<label value="Nombre" />
												<textbox
													value="@{servidor.nombre}" width="90%"
													constraint="no empty" />
												<label
													value="Proveedor Opc" />
												<textbox
